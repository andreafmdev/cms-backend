{
  "name": "cms-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "nest:debug:fastify": "node --inspect-brk dist/main.js",
    "start": "nest start",
    "start:dev": "nest start --watch ",
    "start:debug": "nest start --debug --watch",
    "start:debug2": "nest start --debug --watch --inspect-brk=0.0.0.0:9229",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "npx ts-node -r tsconfig-paths/register node_modules/typeorm/cli.js",
    "generate-feature-structure": "powershell -ExecutionPolicy Bypass -File ./scripts/generate-feature-structure.ps1",
    "typeorm-ext": "ts-node -r tsconfig-paths/register  node_modules/typeorm-extension/bin/cli.cjs",
    "schema:sync": "npm run typeorm schema:sync -- -d  src/infrastructure/datasource/data-source.ts",
    "typeorm:cache": "npm run typeorm cache:clear -- -d  src/infrastructure/datasource/data-source.ts",
    "schema:drop": "npm run typeorm schema:drop -- -d src/infrastructure/datasource/data-source.ts",
    "migration:create": "node -e \"if (!process.env.npm_config_migrationName) { console.error('❌ Missing migrationName. Use --migrationName=<name>'); process.exit(1); } require('child_process').execSync(`npx typeorm migration:create ./src/infrastructure/database/migrations/${process.env.npm_config_migrationName}`, { stdio: 'inherit' })\"",
    "migration:generate": "node -e \"if (!process.env.npm_config_migrationName) { console.error('❌ Missing migrationName. Use --migrationName=<name>'); process.exit(1); } require('child_process').execSync(`npm run typeorm migration:generate -- -d ./src/infrastructure/datasource/data-source.ts ./src/infrastructure/database/migrations/${process.env.npm_config_migrationName} `, { stdio: 'inherit' })\"",
    "migration:run": "npm run typeorm  migration:run -- -d ./src/infrastructure/datasource/data-source.ts",
    "migration:revert": "npm run typeorm  migration:revert -- -d ./src/infrastructure/datasource/data-source.ts",
    "seed:run": "npm run typeorm-ext  seed:run -- -d src/infrastructure/datasource/data-source.ts",
    "seed:create": "npm run typeorm-ext seed:create",
    "schema:drop-seed": "npm run schema:drop && npm run schema:sync && npm run seed:run"
  },
  "dependencies": {
    "@fastify/helmet": "^13.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.1",
    "@nestjs/devtools-integration": "^0.2.0",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/platform-fastify": "^11.0.8",
    "@nestjs/typeorm": "^11.0.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.1",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm-extension": "^3.6.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@faker-js/faker": "^9.4.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.12",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typeorm": "^0.3.20",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}