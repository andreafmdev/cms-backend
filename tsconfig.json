{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,

    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@module/*": ["src/modules/*"],
      "@base/infrastructure/*": ["src/infrastructure/*"],
      "@shared/*": ["src/shared/*"],
      "@config/*": ["src/config/*"],
      "@userModule/*": ["src/modules/users/*"],
      "@productCatalog/*": ["src/modules/productCatalog/*"],
      "@authModule/*": ["src/modules/auth/*"],
      "@healthModule/*": ["src/modules/healthCheck/*"],
      "@/*": ["src/*"],
    }
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
