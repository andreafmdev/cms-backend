{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "types": ["@types/jest"],
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@module/*": ["src/modules/*"],
      "@base/infrastructure/*": ["src/infrastructure/*"],
      "@shared/*": ["src/shared/*"],
      "@config/*": ["src/config/*"],
      "@userModule/*": ["src/modules/users/*"],
      "@productCatalogModule/*": ["src/modules/productCatalog/*"],
      "@authModule/*": ["src/modules/auth/*"],
      "@healthModule/*": ["src/modules/healthCheck/*"],
      "@/*": ["src/*"]
    }
  },

  "include": [
    "src/**/*",
    "jest.config.ts"
  ],
  "exclude": ["node_modules"]
}
